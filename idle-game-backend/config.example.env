# 复制此文件为 .env 并修改配置

# 数据库配置
DATABASE_URL=postgresql://idlegame:idlegame123@localhost:5432/idle_game?schema=public

# Redis 配置
REDIS_URL=redis://:redis123@localhost:6379

# 服务器配置
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置（32字符）
ENCRYPTION_KEY=your-32-character-encryption-key!!

# CORS 配置
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 短信服务配置（生产环境需要真实配置）
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SIGN_NAME=星宠挂机
SMS_TEMPLATE_CODE=SMS_123456

# 实名认证配置（生产环境需要真实配置）
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=7d

# 限流配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

